{
  "name": "tf-weather",
  "version": "8.0.0",
  "description": "a tool to show the weather data from Tinkerforge sensors",
  "main": "dist/bin/weather.js",
  "scripts": {
    "test": "npm run build && nyc node ./dist/bin/weather.js",
    "lint": "xo",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fscherwi/tf-weather.git"
  },
  "author": "fscherwi",
  "license": "MIT",
  "keywords": [
    "tf",
    "tinkerforge",
    "weather"
  ],
  "bugs": {
    "url": "https://github.com/fscherwi/tf-weather/issues"
  },
  "homepage": "https://github.com/fscherwi/tf-weather/blob/master/README.md",
  "dependencies": {
    "log-update": "^5.0.0",
    "tinkerforge": "^2.1.33",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/yargs": "^17.0.3",
    "coveralls": "^3.1.1",
    "eslint-plugin-jsdoc": "^36.1.0",
    "nyc": "^15.1.0",
    "typescript": "^4.4.3",
    "xo": "^0.45.0"
  },
  "bin": {
    "weather": "./dist/bin/weather.js"
  },
  "files": [
    "dist/bin/weather.js",
    "dist/src/get-uid.js",
    "dist/src/ipcon-connect.js",
    "dist/src/output.js",
    "dist/src/get-weather.js"
  ],
  "xo": {
    "rules": {
      "unicorn/no-process-exit": 0,
      "max-params": 0,
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "@typescript-eslint/object-curly-spacing": [
        "error",
        "always"
      ],
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-return": 0,
      "unicorn/prefer-switch": 0,
      "@typescript-eslint/comma-dangle": 0,
      "@typescript-eslint/naming-convention": 0
    },
    "extends": [
      "plugin:jsdoc/recommended"
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "nyc": {
    "reporter": [
      "lcov"
    ]
  }
}

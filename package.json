{
  "name": "tf-weather",
  "version": "6.1.0",
  "description": "a tool to show the weather data from Tinkerforge sensors",
  "main": "bin/weather.js",
  "scripts": {
    "test": "nyc node ./bin/weather.js",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fscherwi/tf-weather.git"
  },
  "author": "fscherwi",
  "license": "MIT",
  "keywords": [
    "tf",
    "tinkerforge",
    "weather"
  ],
  "bugs": {
    "url": "https://github.com/fscherwi/tf-weather/issues"
  },
  "homepage": "https://github.com/fscherwi/tf-weather/blob/master/README.md",
  "dependencies": {
    "commander": "^3.0.2",
    "log-update": "^3.3.0",
    "tinkerforge": "^2.1.24"
  },
  "devDependencies": {
    "coveralls": "^3.0.6",
    "eslint-plugin-jsdoc": "^15.10.0",
    "nyc": "^14.1.1",
    "xo": "^0.25.3"
  },
  "bin": {
    "weather": "./bin/weather.js"
  },
  "files": [
    "bin/weather.js",
    "src/get-uid.js",
    "src/ipcon-connect.js",
    "src/output.js",
    "src/get-weather.js",
    "README.md",
    "LICENSE"
  ],
  "xo": {
    "rules": {
      "unicorn/no-process-exit": 0,
      "max-params": 0
    },
    "plugins": [
      "jsdoc"
    ],
    "extends": ["plugin:jsdoc/recommended"]
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "reporter": [
      "lcov"
    ]
  }
}

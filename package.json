{
  "name": "tf-weather",
  "version": "6.1.0",
  "description": "a tool to show the weather data from Tinkerforge sensors",
  "main": "weather.js",
  "scripts": {
    "test": "nyc node ./bin/command.js",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fscherwi/tf-weather.git"
  },
  "author": "fscherwi",
  "license": "MIT",
  "keywords": [
    "tf",
    "tinkerforge",
    "weather"
  ],
  "bugs": {
    "url": "https://github.com/fscherwi/tf-weather/issues"
  },
  "homepage": "https://github.com/fscherwi/tf-weather/blob/master/README.md",
  "dependencies": {
    "commander": "^2.19.0",
    "log-update": "^3.2.0",
    "tinkerforge": "^2.1.22"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "nyc": "^13.3.0",
    "xo": "^0.24.0"
  },
  "preferGlobal": true,
  "bin": {
    "weather": "./bin/command.js"
  },
  "files": [
    "bin/command.js",
    "src/error.js",
    "src/get-uid.js",
    "src/ipcon-connect.js",
    "src/output.js",
    "src/time.js",
    "src/weather.js",
    "README.md",
    "LICENSE"
  ],
  "xo": {
    "rules": {
      "unicorn/no-process-exit": false,
      "max-params": 0
    }
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "reporter": [
      "lcov"
    ]
  }
}

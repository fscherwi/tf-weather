{
  "name": "tf-weather",
  "version": "8.0.0",
  "description": "a tool to show the weather data from Tinkerforge sensors",
  "main": "dist/bin/weather.js",
  "scripts": {
    "test": "npm run build && npm start",
    "lint": "xo",
    "build": "ncc build bin/weather.ts -o dist -m",
    "start": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fscherwi/tf-weather.git"
  },
  "author": "fscherwi",
  "license": "MIT",
  "keywords": [
    "tf",
    "tinkerforge",
    "weather"
  ],
  "bugs": {
    "url": "https://github.com/fscherwi/tf-weather/issues"
  },
  "homepage": "https://github.com/fscherwi/tf-weather/blob/master/README.md",
  "dependencies": {
    "log-update": "^5.0.1",
    "tinkerforge": "^2.1.34",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/node": "^18.11.10",
    "@types/yargs": "^17.0.15",
    "@vercel/ncc": "^0.36.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "typescript": "^4.9.4",
    "xo": "^0.48.0"
  },
  "bin": {
    "weather": "./dist/index.js"
  },
  "files": [
    "dist/bin/index.js"
  ],
  "xo": {
    "rules": {
      "unicorn/no-process-exit": 0,
      "max-params": 0,
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "@typescript-eslint/object-curly-spacing": [
        "error",
        "always"
      ],
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-return": 0,
      "unicorn/prefer-switch": 0,
      "@typescript-eslint/comma-dangle": 0,
      "@typescript-eslint/naming-convention": 0,
      "import/extensions": 0
    },
    "extends": [
      "plugin:jsdoc/recommended"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
